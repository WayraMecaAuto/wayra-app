{
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm ci --prefer-offline --no-audit",
  "framework": "nextjs",
  "regions": ["iad1"],

  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/reportes/**/*.ts": {
      "maxDuration": 25
    },
    "app/api/ordenes/[id]/route.ts": {
      "maxDuration": 15
    },
    "app/api/ordenes/route.ts": {
      "maxDuration": 15
    },
    "app/api/contabilidad/**/*.ts": {
      "maxDuration": 15
    },
    "app/api/productos/route.ts": {
      "maxDuration": 10
    },
    "app/api/movimientos/route.ts": {
      "maxDuration": 10
    }
  },

  "env": {
    "NODE_ENV": "production",
    "PRISMA_GENERATE_SKIP": "false"
  }
}